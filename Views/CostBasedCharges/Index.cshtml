@model IEnumerable<OrderManagementSystem.Models.CostBasedCharge>

@{
    ViewData["Title"] = "Cost-Based Charges";
}

<h1>Cost-Based Charges</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cost Charge ID</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CostChargeId</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Amount.HasValue)
                    {
                        @item.Amount.Value.ToString("C")
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CostChargeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CostChargeId" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@item.CostChargeId" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>