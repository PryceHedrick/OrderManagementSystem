@model OrderManagementSystem.Models.CostBasedCharge

@{
    ViewData["Title"] = "Create Cost-Based Charge";
}

<h1>Create Cost-Based Charge</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CostChargeId" class="control-label"></label>
        <input asp-for="CostChargeId" class="form-control" />
