@model OrderManagementSystem.Models.CostBasedCharge

@{
    ViewData["Title"] = "Delete Cost-Based Charge";
}

<h1>Delete Cost-Based Charge</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cost-Based Charge</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cost Charge ID
        </dt>
        <dd class="col-sm-10">
            @Model.CostChargeId
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @(Model.Amount?.ToString("C") ?? "N/A")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="CostChargeId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>