@model OrderManagementSystem.Models.CostBasedCharge

@{
    ViewData["Title"] = "Cost-Based Charge Details";
}

<h1>Cost-Based Charge Details</h1>

<div>
    <h4>Cost-Based Charge</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cost Charge ID
        </dt>
        <dd class="col-sm-10">
            @Model.CostChargeId
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CostChargeId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>