@model OrderManagementSystem.Models.Billing

@{
    ViewData["Title"] = "Create Billing";
}

<h1>Create Billing</h1>

<h4>Billing</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BillingId" class="control-label"></label>
                <input asp-for="BillingId" class="form-control" />
                <span asp-validation-for="BillingId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BillingAccountId" class="control-label"></label>
                <select asp-for="BillingAccountId" class="form-control" asp-items="ViewBag.BillingAccountId">
                    <option value="">-- Select Billing Account --</option>
                </select>
                <span asp-validation-for="BillingAccountId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" type="date" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}