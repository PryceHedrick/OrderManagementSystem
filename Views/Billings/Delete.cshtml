@model OrderManagementSystem.Models.Billing

@{
    ViewData["Title"] = "Delete Billing";
}

<h1>Delete Billing</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Billing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Billing ID
        </dt>
        <dd class="col-sm-10">
            @Model.BillingId
        </dd>
        <dt class="col-sm-2">
            Billing Account ID
        </dt>
        <dd class="col-sm-10">
            @Model.BillingAccountId
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Date Created
        </dt>
        <dd class="col-sm-10">
            @Model.DateCreated.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="BillingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>