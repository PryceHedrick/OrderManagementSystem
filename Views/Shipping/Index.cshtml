@{
    ViewData["Title"] = "Shipping Labels";
    ViewData["ActivePage"] = "Shipping";
}

<div class="data-table mb-4">
    <div class="card-header-custom">
        <h5 class="mb-0">Create Shipping Label</h5>
    </div>
    <div class="p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <h6 class="mb-3"><i class="bi bi-geo-alt me-2"></i>Origin Address</h6>
                <div class="mb-3">
                    <label class="form-label">Company Name</label>
                    <input type="text" class="form-control" value="Panda International LLC">
                </div>
                <div class="mb-3">
                    <label class="form-label">Street Address</label>
                    <input type="text" class="form-control" value="1234 Logistics Way">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" value="Evansville">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">State</label>
                        <input type="text" class="form-control" value="IN">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">ZIP</label>
                        <input type="text" class="form-control" value="47715">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h6 class="mb-3"><i class="bi bi-geo me-2"></i>Destination Address</h6>
                <div class="mb-3">
                    <label class="form-label">Recipient Name</label>
                    <input type="text" class="form-control" placeholder="John Smith">
                </div>
                <div class="mb-3">
                    <label class="form-label">Street Address</label>
                    <input type="text" class="form-control" placeholder="5678 Customer Ave">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" placeholder="Chicago">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">State</label>
                        <input type="text" class="form-control" placeholder="IL">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">ZIP</label>
                        <input type="text" class="form-control" placeholder="60601">
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Service Type</label>
                <select class="form-select">
                    <option selected>FedEx Ground</option>
                    <option>FedEx Express</option>
                    <option>FedEx 2Day</option>
                    <option>FedEx Overnight</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Weight (lbs)</label>
                <input type="number" class="form-control" value="5">
            </div>
            <div class="col-md-2">
                <label class="form-label">Length (in)</label>
                <input type="number" class="form-control" value="12">
            </div>
            <div class="col-md-2">
                <label class="form-label">Width (in)</label>
                <input type="number" class="form-control" value="10">
            </div>
            <div class="col-md-2">
                <label class="form-label">Height (in)</label>
                <input type="number" class="form-control" value="8">
            </div>
        </div>
        <div class="mt-4">
            <button class="btn btn-primary btn-lg"><i class="bi bi-printer me-2"></i>Generate Label via FedEx API</button>
        </div>
    </div>
</div>

