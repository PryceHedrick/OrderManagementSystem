@model IEnumerable<OrderManagementSystem.Models.BillingAccount>

@{
    ViewData["Title"] = "Billing Accounts";
    string searchString = Context.Request.Query["searchString"];
}

<h1>Billing Accounts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <p>
        Search by Billing Account ID or User ID: <input type="text" name="searchString" value="@searchString" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillingAccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingAccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountBalance)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BillingAccountId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BillingAccountId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BillingAccountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>