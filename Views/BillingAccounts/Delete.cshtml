@model OrderManagementSystem.Models.BillingAccount

@{
    ViewData["Title"] = "Delete Billing Account";
}

<h1>Delete Billing Account</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Billing Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Billing Account ID
        </dt>
        <dd class="col-sm-10">
            @Model.BillingAccountId
        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Username
        </dd>
        <dt class="col-sm-2">
            Account Balance
        </dt>
        <dd class="col-sm-10">
            @Model.AccountBalance.ToString("C")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="BillingAccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>